<%= render '/layouts/flash'%>
<%= form_for @post do |f|%>
    <%= f.label :title%> 
    <%= f.text_field :title%><br>
    <%= f.label :content%>
    <%= f.text_area :content%><br>
    <%= f.collection_select :blogger_id, @bloggers, :id, :name%><br>
    <%= f.collection_select :destination_id, @destinations, :id, :name%>
    <%= f.submit%>
<%end%>